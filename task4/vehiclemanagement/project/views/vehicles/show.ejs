<%- include('../partials/header', { title: vehicle.vehicleName + ' - Vehicle Details' }) %>

<div class="mb-4">
    <a href="/vehicles" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to Vehicles
    </a>
</div>

<div class="row g-5">
    <div class="col-lg-6">
        <div class="position-relative">
            <img src="<%= vehicle.image %>" class="img-fluid rounded shadow-lg w-100" 
                 alt="<%= vehicle.vehicleName %>" style="height: 400px; object-fit: cover;">
            <div class="position-absolute top-0 end-0 m-3">
                <div class="brand-badge">
                    <%= vehicle.brand %>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-6">
        <h1 class="display-6 fw-bold mb-3"><%= vehicle.vehicleName %></h1>
        <h4 class="text-muted mb-4"><%= vehicle.brand %></h4>
        
        <div class="price-tag fs-3 mb-4">
            $<%= vehicle.price.toLocaleString() %>
        </div>
        
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>Vehicle Details
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-6">
                        <div class="text-muted">Vehicle ID</div>
                        <div class="fw-bold">#<%= vehicle.id %></div>
                    </div>
                    <div class="col-6">
                        <div class="text-muted">Brand</div>
                        <div class="fw-bold"><%= vehicle.brand %></div>
                    </div>
                    <div class="col-12">
                        <div class="text-muted">Description</div>
                        <div>
                            <%= vehicle.desc || 'No description available for this vehicle.' %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="d-grid gap-3">
            <div class="btn-group" role="group">
                <a href="/vehicles/<%= vehicle.id %>/edit" class="btn btn-warning btn-lg">
                    <i class="fas fa-edit me-2"></i>Edit Vehicle
                </a>
                <form method="POST" action="/vehicles/<%= vehicle.id %>?_method=DELETE" class="d-inline">
                    <button type="submit" class="btn btn-danger btn-lg" 
                            onclick="return confirm('Are you sure you want to delete <%= vehicle.vehicleName %>? This action cannot be undone.')">
                        <i class="fas fa-trash me-2"></i>Delete Vehicle
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>